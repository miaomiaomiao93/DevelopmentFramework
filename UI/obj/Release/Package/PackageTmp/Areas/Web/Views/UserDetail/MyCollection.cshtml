@{
    ViewBag.Title = "MyCollection";
}
<script src="https://cdn.bootcss.com/vue/2.4.2/vue.min.js"></script>
<script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
<script src="~/Content/Web/script/web_PageBar.js"></script>
<link href="~/Content/Web/style/web_PageBar.css" rel="stylesheet" />
<link href="~/Content/Web/style/web_MyCollection.css" rel="stylesheet" />
<div class="container">
    <div class="nav">
        <ul>
            <li><a v-on:click="nav_Userinfo">用户信息</a></li>
            <li><a v-on:click="nav_AccountLevel">账户级别</a></li>
            <li class="nav_hover"><a v-on:click="nav_MyCollection">我的收藏</a></li>
            @*<li><a v-on:click="nav_MyProduct">我的作品</a></li>*@
            <li ><a v-on:click="nav_DownloadHistory">历史下载</a></li>
        </ul>
    </div><!--
    --><div class="content">
           <p class="btnGroup"><input type="button"  lang="collect" value="编辑收藏" v-on:click="editCollect"/><input type="button" lang="close" value="关闭" v-on:click="closeEdit" />@*<input type="button" lang="save" value="保存" />*@<input type="button" lang="all" value="全选" v-on:click="selectAll" /><input type="button" lang="delete" value="删除"  v-on:click="deleteCollect"/> </p>
           <ul class="source">
               <li v-for="item in items" track-by="item.GoodsId">
                   <a href="javascript:void(0)" v-on:click="jumpDownLoad($event)" v-bind:data-id="item.GoodsId">
                       <p class="imgGroup"><img v-bind:src="item.ThumbUrl" /><span class="" v-on:click="check($event)" v-bind:data-id="item.GoodsId"></span></p>
                       <p><span>{{item.Name}}</span></p>
                   </a>
               </li>
           </ul>
           <div class="page_wrap" id="J_page_wrap"></div>
    </div>
</div>
<script src="~/Content/Web/script/web_VM_UserDetail_MyCollection.js"></script>